vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO iswenzz/CGSC
	REF 42e78b0f9ce8e85c669cee57f967417fe7c200e5
	SHA512 1ffbc632209fea57730d43b4b71409a67e95a2709e37ffe04c100fea9caaf997315b2ad9dfd1e032d9fc179071c5bd4c432cf545eae314db4c1bf7a2640c4b01
