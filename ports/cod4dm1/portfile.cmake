vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO iswenzz/CoD4-DM1
	REF e812754ca9d32e60ba4ecd4c51cc40b0c9f7b336
	SHA512 1a512303d88150772290ad3a8ee9c185e8c5a32944fc56e8218b6dce0573d53f340576291191603bc256e559ab55ac727b6509a0d6ca0dbb62f0b4e0fff55265
