vcpkg_from_github(
	OUT_SOURCE_PATH SOURCE_PATH
	REPO iswenzz/OpenFX
	REF e28db8c64c670f4d8515738190bb799a1305973d
	SHA512 b951cbace586591a166188ffbe2948cdfcd89c40ba1c852c8a209920135e93b04680cfb1e8f2fc931e79a5564138a80c4e85d1699102a1982609bd29dab99411
	HEAD_REF vcpkg
)

